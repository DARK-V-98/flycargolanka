
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function hasRole(role) {
      if (!isAuthenticated()) {
        return false;
      }
      let userRole = getUserData(request.auth.uid).role;
      return userRole == role;
    }

    function isAdmin() {
      return hasRole('admin') || hasRole('developer');
    }
    
    // --- NIC Verification Folder ---
    match /nic_verification/{userId}/{fileName} {
      // Allow user to write to their own folder
      allow write: if request.auth.uid == userId &&
                      request.resource.size < 5 * 1024 * 1024 && // Max 5MB
                      request.resource.contentType.matches('image/.*'); // Only images
                      
      // Allow admins to read the images
      allow read: if isAdmin();
    }

    // --- Publicly Readable Folders (e.g., for homepage promo images) ---
    match /homepage/{fileName} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    // --- Default Deny Rule ---
    // Deny read/write access to all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
