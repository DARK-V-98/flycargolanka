rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rule for NIC verification images
    // Allow users to write to a folder corresponding to their own UID.
    // The path will be: nic_verification/{userId}/{fileName}
    match /nic_verification/{userId}/{allPaths=**} {
      // Only the authenticated user can upload their own NIC images.
      // We also enforce a file size limit of 5MB here for extra security.
      allow write: if request.auth != null && request.auth.uid == userId && request.resource.size < 5 * 1024 * 1024;
      
      // Only the authenticated user should be able to read their own images.
      // Admins would typically use the Admin SDK to bypass these rules for viewing.
      allow read: if request.auth != null && request.auth.uid == userId;
    }
  }
}
