
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    match /nic_verification/{userId}/{fileName} {
      
      // Only the owner can upload files to their directory.
      // File size must be less than 5MB.
      // Content type must be an image.
      allow create: if isOwner(userId) &&
                       request.resource.size < 5 * 1024 * 1024 &&
                       request.resource.contentType.matches('image/.*');

      // Anyone can read the images, as they are accessed via public URLs
      // in both the NIC verification page (for admins) and a user's profile.
      allow read: if true;

      // No one can update or delete NIC images from the client to prevent tampering.
      // Deletions should be handled by an admin process if needed.
      allow update, delete: if false;
    }

    // Match the path for the homepage promotional image.
    match /homepage/{fileName} {
      allow read: if true;
      // Write is handled via the Firebase Admin SDK, which bypasses these rules.
      allow write: if false;
    }
    
    // Default Deny: Disallow any other operations on any other paths.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
